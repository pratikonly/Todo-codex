generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TaskStatus {
  todo
  in_progress
  blocked
  done
}

enum TaskPriority {
  low
  medium
  high
}

model Task {
  id          String       @id @default(cuid())
  title       String
  description String
  tags        String[]     @default([])
  priority    TaskPriority @default(medium)
  status      TaskStatus   @default(todo)
  dueDate     DateTime
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}
